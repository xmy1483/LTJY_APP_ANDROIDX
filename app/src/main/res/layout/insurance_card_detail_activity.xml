<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/in_detail_top"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车险抵用券"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:text="抵用券号：12341234321479832749832749" />

                <TextView
                    android:id="@+id/tv_002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用期限：2016/10/30至2016/10/30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/in_detail_mid_left" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/in_detail_mid" />

                <ImageView
                    android:id="@+id/imageView_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/in_detail_mid_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/in_detail_bottom"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@color/black" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/shape_dot_black" />

                    <TextView
                        android:id="@+id/tv_in_detail_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="使用方法"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/shape_dot_black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.1dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_003"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"

                    android:text="1.XXXXXXXXXXXXXXXXXXXXXXXX\n2.XXXXXXXXXXXXXXXXXXXXXXXXXX\n3.XXXXXXXXXXXXXXXXXXXXXXXXX\n4.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX\n5.XXXXXXXXXXXXXXXXXXXXXXXXX" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@color/black" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/shape_dot_black" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用须知"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/shape_dot_black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.1dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_004"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:text="1.XXXXXXXXXXXXXXXXXXXXXXXX\n2.XXXXXXXXXXXXXXXXXXXXXXXXXX\n3.XXXXXXXXXXXXXXXXXXXXXXXXX\n4.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX\n5.XXXXXXXXXXXXXXXXXXXXXXXXX" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_btn" />
</LinearLayout>