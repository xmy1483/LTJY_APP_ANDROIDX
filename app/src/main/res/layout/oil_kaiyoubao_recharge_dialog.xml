<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moonlight">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_12"
                android:src="@mipmap/icon_left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="请输入揩油宝支付密码"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_18" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_8f" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/oil_stroke_solid_corners_white"
            android:orientation="horizontal">


            <FrameLayout style="@style/oil_kaiyoubao_recharge_fl">

                <ImageView
                    android:id="@+id/iv_01"
                    style="@style/oil_kaiyoubao_recharge_iv" />
            </FrameLayout>

            <View
                android:layout_width="@dimen/dp_066"
                android:layout_height="match_parent"
                android:background="@color/blue" />

            <FrameLayout style="@style/oil_kaiyoubao_recharge_fl">

                <ImageView
                    android:id="@+id/iv_02"
                    style="@style/oil_kaiyoubao_recharge_iv" />
            </FrameLayout>

            <View
                android:layout_width="@dimen/dp_066"
                android:layout_height="match_parent"
                android:background="@color/blue" />

            <FrameLayout style="@style/oil_kaiyoubao_recharge_fl">

                <ImageView
                    android:id="@+id/iv_03"
                    style="@style/oil_kaiyoubao_recharge_iv" />
            </FrameLayout>

            <View
                android:layout_width="@dimen/dp_066"
                android:layout_height="match_parent"
                android:background="@color/blue" />

            <FrameLayout style="@style/oil_kaiyoubao_recharge_fl">

                <ImageView
                    android:id="@+id/iv_04"

                    style="@style/oil_kaiyoubao_recharge_iv" />
            </FrameLayout>


            <View
                android:layout_width="@dimen/dp_066"
                android:layout_height="match_parent"
                android:background="@color/blue" />

            <FrameLayout style="@style/oil_kaiyoubao_recharge_fl">

                <ImageView
                    android:id="@+id/iv_05"
                    style="@style/oil_kaiyoubao_recharge_iv" />
            </FrameLayout>

            <View
                android:layout_width="@dimen/dp_066"
                android:layout_height="match_parent"
                android:background="@color/blue" />

            <FrameLayout style="@style/oil_kaiyoubao_recharge_fl">

                <ImageView
                    android:id="@+id/iv_06"
                    style="@style/oil_kaiyoubao_recharge_iv" />
            </FrameLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"

            android:text="忘记密码?"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_8f" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>