<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
      <!--  <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="BacAppTheme" parent="AppTheme">

    </style>

    <!-- 沉浸式状态栏-->
    <style name="NoStaNoNavAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="center_header_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="oil_kaiyoubao_recharge_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_36</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">numberPassword</item>
    </style>

    <style name="oil_kaiyoubao_recharge_fl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="oil_kaiyoubao_recharge_iv">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/shape_dot_black</item>
    </style>


    <style name="exchange_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="voucher_ccet">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="cards_txt">
        <item name="android:background">@color/gray_8f</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="phone_recharge_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_stroke_solid_corners_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--insurance-->
    <style name="insurance_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:background">@drawable/shape_stroke_solid_corners_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="insurance_left_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textColor">@color/gray_8f</item>
    </style>

    <style name="insurance_edittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_cc</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="insurance_city_text">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="insurance_edittext_0">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_cc</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="insurance_left_textview_0">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/gray_8f</item>
    </style>

</resources>

